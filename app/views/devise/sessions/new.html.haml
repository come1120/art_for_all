        = link_to "ART FOR ALL", { anchor: "art_for_all" }, class: "header_list"
      %li
        = link_to "美術への対策要請", { anchor: "must_todo" }, class: "header_list"
      %li
        = link_to "賛同署名フォーム", { anchor: "form" }, class: "header_list"
