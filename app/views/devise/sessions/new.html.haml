        = link_to "Members Station", { anchor: "member" }, class: "header_list" 
      %li
        = link_to "お問い合わせ", { anchor: "info" }, class: "header_list"

  .header__surch
    = icon('fa', 'search fa-lg')

.main
  .main__logo
    ART FOR ALL 
  .main__message
    美術への対策要請 
  .main__listbox
    %ul
      %li
        = link_to "ART FOR ALL ", { anchor: "art_for_all" }, class: "main_list"
      %li
        = link_to "美術への対策要請 ", { anchor: "must_todo" }, class: "main_list"
      %li
        = link_to "賛同署名フォーム ", { anchor: "form" }, class: "main_list"
      %li
        = link_to "Members Station ", { anchor: "member" }, class: "main_list"
      %li
        = link_to "お問い合わせ ", { anchor: "info" }, class: "main_list"

.contents#art_for_all
  = render "messages/content"
  .contents__btnbox
    .contents__btnbox--icon
      = link_to "https://www.facebook.com/", class: "contents__btn" do
        = icon('fab', 'facebook-square fa-2x')
    .contents__btnbox--icon
      = link_to "https://twitter.com/", class: "contents__btn" do
        = icon('fab', 'twitter fa-2x')
    .contents__btnbox--icon
      = link_to "https://www.instagram.com/", class: "contents__btn" do
        = icon('fab', 'instagram fa-2x')
   
  .contents__message#must_todo
    .contents__message--title
      美術への対策要請
    .contents__message--text
      = render "messages/text"

