.main
  .main__logo
    ART FOR ALL 
  .main__message
    美術への対策要請 
  .main__listbox
    %ul
      %li
        = link_to "ART FOR ALL ", "#", class: "main_list"
      %li
        = link_to "美術への対策要請 ", "#", class: "main_list"
      %li
        = link_to "賛同署名フォーム ", "#", class: "main_list"
