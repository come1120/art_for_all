        = link_to "賛同メッセージ ", "#", class: "main_list" 
      %li
        = link_to "お問い合わせ ", "#", class: "main_list"

.contents
  = render "messages/content"
  .contents__btnbox
    .contents__btnbox--icon
      = link_to "https://www.facebook.com/", class: "contents__btn" do
        = icon('fab', 'facebook-square fa-2x')
    .contents__btnbox--icon
      = link_to "https://twitter.com/", class: "contents__btn" do
        = icon('fab', 'twitter fa-2x')
    .contents__btnbox--icon
      = link_to "https://www.instagram.com/", class: "contents__btn" do
        = icon('fab', 'instagram fa-2x')
   
  .contents__message
    .contents__message--title
      美術への対策要請
    .contents__message--text
      = render "messages/text"

